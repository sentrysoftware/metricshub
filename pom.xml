						<configuration>
							<versionString>${hwgraf.version}</versionString>
							<formattedPropertyPrefix>formattedHwGrafVersion</formattedPropertyPrefix>
						</configuration>
					</execution>
					<execution>
						<id>parse-ddog-version</id>
						<phase>initialize</phase>
						<goals>
							<goal>parse-version</goal>
						</goals>
						<configuration>
							<versionString>1.0.00</versionString>
							<formattedPropertyPrefix>formattedDDogVersion</formattedPropertyPrefix>
						</configuration>
					</execution>
					<!-- Same as above, but when run with simple `mvn site` -->
					<execution>
						<id>parse-version-for-site</id>
						<phase>pre-site</phase>
						<goals>
							<goal>parse-version</goal>
						</goals>
					</execution>
					<execution>
						<id>parse-cc-version-for-site</id>
						<phase>pre-site</phase>
						<goals>
							<goal>parse-version</goal>
						</goals>
						<configuration>
							<versionString>${community-connectors.version}</versionString>
							<formattedPropertyPrefix>formattedCcVersion</formattedPropertyPrefix>
						</configuration>
					</execution>
					<execution>
						<id>parse-hwgraf-version-for-site</id>
						<phase>pre-site</phase>
						<goals>
							<goal>parse-version</goal>
						</goals>
						<configuration>
							<versionString>${hwgraf.version}</versionString>
							<formattedPropertyPrefix>formattedHwGrafVersion</formattedPropertyPrefix>
						</configuration>
					</execution>
					<execution>
						<id>parse-ddog-version-for-site</id>
						<phase>pre-site</phase>
						<goals>
							<goal>parse-version</goal>
						</goals>
						<configuration>
							<versionString>1.0.00</versionString>
							<formattedPropertyPrefix>formattedDDogVersion</formattedPropertyPrefix>
						</configuration>
					</execution>
					<execution>
						<id>build-no-snapshot-version</id>
						<phase>initialize</phase>
						<goals>
							<goal>regex-property</goal>
						</goals>
						<configuration>
							<name>project.version.noSnapshot</name>
							<value>${project.version}</value>
							<regex>^([0-9a-zA-Z.]+)(-SNAPSHOT)?$</regex>
							<replacement>$1</replacement>
							<failIfNoMatch>false</failIfNoMatch>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<formatMajor>%d</formatMajor>
					<formatMinor>%d</formatMinor>
					<formatIncremental>%02d</formatIncremental>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>3.3.0</version>
				<configuration>
					<sourceEncoding>${project.build.sourceEncoding}</sourceEncoding>
					<configLocation>checkstyle.xml</configLocation>
				</configuration>
				<executions>
					<execution>
						<id>validate</id>
						<phase>validate</phase>
						<goals>
							<goal>checkstyle</goal>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>com.hubspot.maven.plugins</groupId>
				<artifactId>prettier-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<inputGlobs>
						<!-- These are the default patterns, you can omit
						<inputGlobs> entirely unless you want to override them -->
						<inputGlob>src/main/java/**/*.java</inputGlob>
						<inputGlob>src/test/java/**/*.java</inputGlob>
						<inputGlob>src/it/java/**/*.java</inputGlob>
					</inputGlobs>
				</configuration>
			</plugin>

			<!-- javadoc -->
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- Maven Deploy Plugin-->
			<plugin>
				<artifactId>maven-deploy-plugin</artifactId>
			</plugin>

			<!-- Maven Source Plugin -->
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<version>3.3.0</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

	<reporting>
		<plugins>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<reportSets>
					<reportSet>
					<reports>
						<report>javadoc</report>
					</reports>
				</reportSet>
			</reportSets>
		</plugin>
		</plugins>
	</reporting>


</project>